{
  "name": "pico-engine",
  "version": "0.40.0",
  "description": "An implementation of the pico-engine targetting node.js",
  "main": "src/index.js",
  "bin": {
    "pico-engine": "bin/pico-engine"
  },
  "files": [
    "bin",
    "krl",
    "public",
    "src"
  ],
  "scripts": {
    "start": "scriptsp watch:http watch:test",
    "watch:http": "onchange -i src/ krl/ public/ -- npm run -s runlocal",
    "watch:test": "onchange -i src/ -- npm run test -s",
    "lint": "../../node_modules/.bin/eslint src/ && echo lint-ok",
    "runlocal": "PICO_ENGINE_HOME=. NODE_ENV=development node src/cli.js",
    "build": "NODE_ENV=production webpack",
    "prepublish": "npm run build",
    "test": "npm run lint && node src/tests.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Picolab/pico-engine.git"
  },
  "keywords": [
    "pico-engine",
    "krl",
    "KRE",
    "IoT"
  ],
  "author": "Picolab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Picolab/pico-engine/issues"
  },
  "homepage": "https://github.com/Picolab/pico-engine#readme",
  "devDependencies": {
    "css-loader": "^0.28.7",
    "file-loader": "^0.11.2",
    "onchange": "^3.0.0",
    "scriptsp": "^1.0.1",
    "style-loader": "^0.18.2",
    "tape": "^4.5.1",
    "temp-fs": "^0.9.9",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "dependencies": {
    "async": "^2.5.0",
    "body-parser": "^1.18.2",
    "express": "^4.15.5",
    "home-dir": "^1.0.0",
    "krl-compiler": "^0.40.0",
    "leveldown": "^1.8.0",
    "lodash": "^4.11.2",
    "mime-types": "^2.1.17",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "pico-engine-core": "^0.40.0",
    "read-pkg-up": "^2.0.0",
    "request": "^2.82.0"
  }
}
